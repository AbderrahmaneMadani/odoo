<odoo>

<!-- service -->
    <record id="view_service_tree" model="ir.ui.view">
        <field name="name">service.tree</field>
        <field name="model">services.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="category_id"/>
            </list>
        </field>
    </record>

    <record id="view_service_form" model="ir.ui.view">
        <field name="name">service.form</field>
        <field name="model">services.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="category_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">services.service</field>
        <field name="view_mode">list,form</field>
    </record>

<!-- category -->
    <record id="view_service_category_tree" model="ir.ui.view">
        <field name="name">service.category.tree</field>
        <field name="model">services.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_service_category_form" model="ir.ui.view">
        <field name="name">service.category.form</field>
        <field name="model">services.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="service_ids">
                            <list>
                                <field name="name"/>
                                <field name="description"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_service_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">services.category</field>
        <field name="view_mode">list,form</field>
    </record>

<!-- menu -->
    <menuitem id="menu_service_management" name="Service Management"/>
    <menuitem id="menu_service_categories" name="Categories" parent="menu_service_management" action="action_service_category"/>
    <menuitem id="menu_services" name="Services" parent="menu_service_management" action="action_service"/>

</odoo>
